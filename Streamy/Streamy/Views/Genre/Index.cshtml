@using Streamy.Core.Models
@model GenreListViewModel

@{
    ViewData["Title"] = "Genres";

}

<html>
<div class="col-lg-auto">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@ViewData["Title"]</h4>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Genre</th>
                                    <th>Options</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var genre in Model.Genres)
                                {
                                    <tr>
                                        <td>@genre.Name</td>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@genre.Id" class="mdi mdi-information-outline "></a>
                                            <a asp-action="Edit" asp-route-id="@genre.Id" class="mdi mdi-border-color"></a>
                                            <a asp-action="Delete" asp-route-id="@genre.Id" class="mdi mdi-delete "></a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>  
                                <button asp-action="Create" class="btn btn-primary mr-2">Add</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</html>
